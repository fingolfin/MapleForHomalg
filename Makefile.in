CC=cc

GAPINCL=-I$(GAPPATH)/src -I$(GAPPATH)/bin/@GAPARCH@

all: default clean doc

default: bindir bin/@GAPARCH@/mapleforhomalg.so

# this target creates a bin-directory
bindir:
	if test ! -d bin;  then mkdir bin;  fi
	if test ! -d bin/@GAPARCH@;  then mkdir bin/@GAPARCH@;  fi

bin/@GAPARCH@/mapleforhomalg.so: src/mapleforhomalg.c
	cp $(GAPPATH)/bin/@GAPARCH@/config.h bin/@GAPARCH@
	$(GAPPATH)/bin/@GAPARCH@/gac -p "-g" -P "-g" -p "-I$(MAPLEINCLUDEPATH) -DMAPLE_PATH=\"$(MAPLE)\"" -P "-rpath $(MAPLEBINPATH) -L$(MAPLEBINPATH) -lmaplec" -d -o bin/@GAPARCH@/mapleforhomalg.so src/mapleforhomalg.c

doc: doc/manual.six

doc/manual.six: doc/MapleForHomalg.xml VERSION
	        gap makedoc.g

clean:
	(cd doc ; ./clean)

archive: doc
	(mkdir -p ../tar; cd ..; tar czvf tar/MapleForHomalg.tar.gz --exclude "makefile" --exclude ".git" --exclude test --exclude "public_html" --exclude "bin/git-push" --exclude "bin/git-pull-max" MapleForHomalg)

WEBPOS=~/gap/pkg/MapleForHomalg/public_html

towww: archive
	echo '<?xml version="1.0" encoding="ISO-8859-1"?>' >${WEBPOS}.version
	echo '<mixer>' >>${WEBPOS}.version
	cat VERSION >>${WEBPOS}.version
	echo '</mixer>' >>${WEBPOS}.version
	cp PackageInfo.g ${WEBPOS}
	cp README ${WEBPOS}/README.MapleForHomalg
	cp doc/manual.pdf ${WEBPOS}/MapleForHomalg.pdf
	cp ../tar/MapleForHomalg.tar.gz ${WEBPOS}
	cp doc/*.html ${WEBPOS}

