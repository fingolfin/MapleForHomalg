CC=cc

GAPINCL=-I$(GAPPATH)/src -I$(GAPPATH)/bin/@GAPARCH@

all: default clean doc

default: bindir bin/@GAPARCH@/mapleforhomalg.so bin/LibraryPath.sh

# this target creates a bin-directory
bindir:
	if test ! -d bin;  then mkdir bin;  fi
	if test ! -d bin/@GAPARCH@;  then mkdir bin/@GAPARCH@;  fi

bin/LibraryPath.sh: bin/LibraryPath.sh.in
	sed "s|@@MAPLE@@|$(MAPLE)|g;s|@@MAPLE_SYSTEM_TYPE@@|$(MAPLE_SYSTEM_TYPE)|g" bin/LibraryPath.sh.in > bin/LibraryPath.sh
	@echo "#######################################################################"
	@echo "# Add the following line to your gap start script:"
	@echo "# [ -f $(SRCDIR)/bin/LibraryPath.sh ] && . $(SRCDIR)/bin/LibraryPath.sh"
	@echo "#######################################################################"

bin/@GAPARCH@/mapleforhomalg.so: TMPDIR := $(shell mktemp -d /tmp/mapleforhomalg-build.XXXXXX)
bin/@GAPARCH@/mapleforhomalg.so: src/mapleforhomalg.c
	cp $(GAPPATH)/bin/@GAPARCH@/config.h bin/@GAPARCH@
	ln -s "$(MAPLEINCLUDEPATH)" $(TMPDIR)/include
	ln -s "$(MAPLEBINPATH)" $(TMPDIR)/lib
	$(GAPPATH)/bin/@GAPARCH@/gac -p "-g" -p "-I $(TMPDIR)/include" -P " -L $(TMPDIR)/lib -lmaplec" -d -o bin/@GAPARCH@/mapleforhomalg.so src/mapleforhomalg.c
	rm -r $(TMPDIR)

doc: doc/manual.six

doc/manual.six: makedoc.g maketest.g \
		PackageInfo.g VERSION \
		doc/MapleForHomalg.bib doc/*.xml \
		gap/*.gd gap/*.gi \
		examples/*
	        gapL makedoc.g

clean:
	(cd doc ; ./clean)

test:	doc
	gapL -x 80 maketest.g

archive: test
	(mkdir -p ../tar; cd ..; tar czvf tar/MapleForHomalg.tar.gz --exclude ".DS_Store" MapleForHomalg/doc/*.* MapleForHomalg/gap/*.{gi,gd} MapleForHomalg/{CHANGES,PackageInfo.g,README,VERSION,init.g,read.g,Makefile.in,configure,makedoc.g,maketest.g})

WEBPOS=~/gap/pkg/MapleForHomalg/public_html
WEBPOS_FINAL=~/Sites/homalg

towww: archive
	echo '<?xml version="1.0" encoding="UTF-8"?>' >${WEBPOS}.version
	echo '<mixer>' >>${WEBPOS}.version
	cat VERSION >>${WEBPOS}.version
	echo '</mixer>' >>${WEBPOS}.version
	cp PackageInfo.g ${WEBPOS}
	cp README ${WEBPOS}/README.MapleForHomalg
	cp doc/manual.pdf ${WEBPOS}/MapleForHomalg.pdf
	cp doc/*.{css,html} ${WEBPOS}
	cp ../tar/MapleForHomalg.tar.gz ${WEBPOS}
	cp ${WEBPOS}/* ${WEBPOS_FINAL}

